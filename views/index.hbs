<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Weather App</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="icon" type="image/x-icon" href="../images/weather.svg" />
    <link rel="stylesheet" type="text/css" href="index.css" />
  </head>
  <body>
    <header>
      <img src="images/weather.svg" alt="weather_icon" />
      <h1>Weather App</h1>
    </header>
    <main>
      <div class="box">
        <form method="get" action="/" id="search">
          <input
            type="text"
            id="city"
            name="city"
            value=""
            placeholder="Enter City"
            autocomplete="off"
            required
          />
          <button type="submit" id="submit">Search</button>
        </form>
        <div class="details">
          <section id="weather_details">
            <div id="weatherdata" class="data">
              <img src={{src}} alt="icon" id="icon" />
              <h2 id="weather">{{tempstatus}}</h2>
              <h3 class="city">
                <i
                  id="weather_icon"
                  class="fa-sharp fa-solid fa-location-dot"
                  style="color: #ffffff"
                ></i>
                <span id="location">{{city}},{{country}}</span>
              </h3>
              <div id="temp">
                <h2>{{temp}} &deg;C</h2>
              </div>
              <div id="tempmin_max">
                <div><img
                    src="images/thermometer-warmer.svg"
                    alt="max_temp"
                  /><span>Max
                    {{tempmax}}&deg;C</span>
                </div>
                <div>
                  <img
                    src="images/thermometer-colder.svg"
                    alt="max_temp"
                  /><span>Min
                    {{tempmin}}&deg;C</span>
                </div>
              </div>
            </div>

            <div id="datetime" class="data">
              <h2 id="date">
                Saturday, 29 JULY 2023<br /><span id="time"> 12:32 PM</span>
              </h2>
            </div>
          </section>
          <section id="info">
            <div class="additional_data" id="sunrise">
              <img src="images/sunrise.svg" alt="sunrise" />
              <div class="value">
                <p>Sunrise</p>
                <h3>{{riseTime}} AM</h3>
              </div>
            </div>
            <div class="additional_data" id="sunset">
              <img src="images/sunset.svg" alt="sunset" />
              <div class="value">
                <p>Sunset</p>
                <h3>{{setTime}} PM</h3>
              </div>
            </div>
            <div class="additional_data" id="humidity">
              <img src="images/humidity.svg" alt="humidity" />
              <div class="value">
                <p>Humidity</p>
                <h3>{{humidity}}%</h3>
              </div>
            </div>
            <div class="additional_data" id="pressure">
              <img src="images/barometer.svg" alt="pressure" />
              <div class="value">
                <p>Air Pressure</p>
                <h3>{{pressure}} Pa</h3>
              </div>
            </div>
            <div class="additional_data" id="wind">
              <img src="images/wind.svg" alt="wind" />
              <div class="value">
                <p>Wind Speed</p>
                <h3>{{speed}} km/h</h3>
              </div>
            </div>
          </section>
        </div>
      </div>
    </main>
    <script type="text/javascript">
      const getCurrTime = () => { const getTime = new Date(); let hours =
      getTime.getHours(); let min = getTime.getMinutes(); let period = "AM";if
      (hours > 11) { period = "PM"; if (hours > 12) { hours = hours - 12; } } if
      (min < 10) { min = "0" + min; } return `${hours}:${min} ${period}`; };
      const getCurrDate = () => { const date = new Date(); const days = [
      "Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday",
      "Saturday", ]; const month = [ "JAN", "FEB", "MAR", "APR", "MAY", "JUN",
      "JUL", "AUG", "SEP", "OCT", "NOV", "DEC", ]; let day =
      days[date.getDay()]; let curDate = date.getDate(); let mon =
      month[date.getMonth()]; let year = date.getFullYear(); return `${day},
      ${curDate} ${mon} ${year}`; }; const updateTime = () => {
      document.getElementById( "date" ).innerHTML = `${getCurrDate()} <br> <span
      id="time"> ${getCurrTime()}</span>`; }; setInterval(updateTime, 1000);
    </script>
  </body>
</html>